@page
@model BrainStormEra_Razor.Pages.Admin.LoginModel
@{
    ViewData["Title"] = "Đăng nhập Admin - BrainStorm Era";
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link href="~/css/admin-login.css" rel="stylesheet">
</head>
<body>
    <div class="login-container">
        <div class="logo-section">
            <div class="logo-icon">
                <i class="fas fa-brain"></i>
            </div>
            <h1 class="welcome-text">Admin Portal</h1>
            <p class="welcome-subtitle">Chào mừng đến với BrainStorm Era</p>
        </div>

        <form method="post" id="loginForm">
            <div asp-validation-summary="All" class="alert alert-danger" style="display: none;"></div>

            <div class="input-group-custom">
                <div class="form-floating">
                    <i class="fas fa-user input-icon"></i>
                    <input asp-for="Input.Username" class="form-control" id="username" placeholder="Tên đăng nhập" autocomplete="username" />
                    <label asp-for="Input.Username">Tên đăng nhập</label>
                </div>
                <span asp-validation-for="Input.Username" class="text-danger"></span>
            </div>

            <div class="input-group-custom">
                <div class="form-floating">
                    <i class="fas fa-lock input-icon"></i>
                    <input asp-for="Input.Password" class="form-control" id="password" placeholder="Mật khẩu" autocomplete="current-password" />
                    <label asp-for="Input.Password">Mật khẩu</label>
                </div>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" asp-for="Input.RememberMe" id="rememberMe">
                <label class="form-check-label" asp-for="Input.RememberMe">
                    Ghi nhớ đăng nhập
                </label>
            </div>

            <button type="submit" class="btn btn-login">
                <span class="btn-text">Đăng nhập</span>
            </button>

            <input name="ReturnUrl" type="hidden" value="@Model.ReturnUrl" />
        </form>

        <div class="footer-text">
            <i class="fas fa-shield-alt"></i>
            Khu vực dành cho quản trị viên
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.0/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.5/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    <script src="~/js/admin-login.js"></script>
</body>
</html>

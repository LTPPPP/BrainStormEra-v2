@page "/auth/accessdenied"
@model BrainStormEra_Razor.Pages.Auth.AccessDeniedModel
@{
    ViewData["Title"] = "Access Denied";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Access Denied - BrainStormEra</title>
    <link rel="icon" type="image/x-icon" href="~/SharedMedia/logo/logowithoutbackground.png" sizes="48x48">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/global.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/auth/access-denied.css" asp-append-version="true" />
</head>

<body>
    <!-- Toast notification data containers -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div data-toast-success="@TempData["SuccessMessage"]" style="display:none;"></div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div data-toast-error="@TempData["ErrorMessage"]" style="display:none;"></div>
    }
    @if (TempData["WarningMessage"] != null)
    {
        <div data-toast-warning="@TempData["WarningMessage"]" style="display:none;"></div>
    }
    @if (TempData["InfoMessage"] != null)
    {
        <div data-toast-info="@TempData["InfoMessage"]" style="display:none;"></div>
    }

    <div class="access-denied-container">
        <div class="access-denied-card">
            <!-- Logo -->
            <img src="~/SharedMedia/logo/logowithoutbackground.png" 
                 alt="BrainStormEra Logo" 
                 class="access-denied-logo"
                 onerror="this.onerror=null; this.src='~/SharedMedia/defaults/default-logo.svg';" />
            
            <!-- Main Icon -->
            <i class="fas fa-ban access-denied-icon"></i>
            
            <!-- Title and Subtitle -->
            <h1 class="access-denied-title">Access Denied</h1>
            <h2 class="access-denied-subtitle">Permission Required</h2>
            
            <!-- Main Message -->
            <p class="access-denied-message">
                You don't have the necessary permissions to access this resource. 
                Please contact your administrator if you believe this is an error.
            </p>
            
            <!-- Reasons Section -->
            <div class="access-denied-reasons">
                <h4>
                    <i class="fas fa-info-circle"></i>
                    This could happen for several reasons:
                </h4>
                <ul class="reasons-list">
                    <li>You don't have the required permissions for this resource</li>
                    <li>Your session may have expired or become invalid</li>
                    <li>The resource requires a different user role</li>
                    <li>Administrative restrictions may be in place</li>
                </ul>
            </div>
            
            <!-- Action Buttons -->
            <div class="access-denied-actions">
                <a href="/" class="btn-access-denied btn-primary-access">
                    <i class="fas fa-home"></i>
                    Go to Home
                </a>
                <a href="/auth/login" class="btn-access-denied btn-secondary-access">
                    <i class="fas fa-sign-in-alt"></i>
                    Login Again
                </a>
            </div>
            
            <!-- Support Information -->
            <div class="access-denied-support">
                <p class="support-text">
                    <strong>Need assistance?</strong> Contact our support team or check your account permissions. 
                    If you believe this is an error, please report it to your system administrator.
                </p>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/shared/toast-notifications.js" asp-append-version="true"></script>
</body>

</html>

# BrainStormEra Environment Variables
# Copy this file to .env and update the values

# Google AI API Key (Required for AI services)
GOOGLE_AI_API_KEY=

# Security
SECRET_KEY=dev-secret-key-brainstorm-change-in-production

# Database Configuration
# SQL Server (Main Database)
MSSQL_SA_PASSWORD=YourStrong@Passw0rd
MSSQL_DATABASE=BrainStormEra

# PostgreSQL (AI Services Database)
POSTGRES_DB=brainstormera
POSTGRES_USER=brainstorm
POSTGRES_PASSWORD=password

# Application URLs
MVC_PORT=5000
RAZOR_PORT=5001
CHAT_SERVICE_PORT=8000
RAG_IMG_SERVICE_PORT=8001
RAG_VID_SERVICE_PORT=8002
SUGGESTION_AI_SERVICE_PORT=8003

# Management Tools
REDIS_COMMANDER_PORT=8081
PGADMIN_PORT=8080
PGADMIN_EMAIL=admin@brainstormera.com
PGADMIN_PASSWORD=admin123

# AI Configuration
CHATBOT_TEMPERATURE=0.7
CHATBOT_TOP_K=40
CHATBOT_TOP_P=0.8
CHATBOT_MAX_TOKENS=1024
CHATBOT_CACHE_HOURS=24
CHATBOT_HISTORY_LIMIT=5

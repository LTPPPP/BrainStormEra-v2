@model QuizDetailsViewModel
@{
    ViewData["Title"] = "Quiz Details - " + Model.QuizName;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/pages/Quiz/quiz-details.css" />
    <link rel="stylesheet" href="~/css/pages/Quiz/quiz-question-list.css" />
}

<div class="container-fluid py-4">
    <!-- Page Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card shadow-sm border-0 quiz-header-card">
                <div class="card-body text-white">
                    <div class="d-flex justify-content-between align-items-start">
                        <div>
                            <h1 class="mb-2">@Model.QuizName</h1>
                            <p class="mb-1 opacity-75">@Model.QuizDescription</p>
                            <small class="opacity-75">
                                <i class="fas fa-book me-1"></i>@Model.CourseName
                                @if (!string.IsNullOrEmpty(Model.LessonName))
                                {
                                    <span class="mx-2">â€¢</span>
                                    <i class="fas fa-play-circle me-1"></i>
                                    @Model.LessonName
                                }
                            </small>
                        </div>
                        <div class="text-end">
                            <div class="d-flex gap-2 mb-2">
                                <span class="badge bg-light text-dark fs-6">
                                    <i class="fas fa-clock me-1"></i>@Model.TimeLimit min
                                </span>
                                <span class="badge bg-light text-dark fs-6">
                                    <i class="fas fa-star me-1"></i>@Model.PassingScore%
                                </span>
                            </div>
                            <small class="opacity-75">
                                Created: @Model.QuizCreatedAt.ToString("dd/MM/yyyy")
                            </small>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>    <!-- Quiz Stats -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="quiz-stats-panel">
                <div class="quiz-stats-grid">
                    <div class="quiz-stat-item">
                        <div class="quiz-stat-value">@Model.TotalQuestions</div>
                        <div class="quiz-stat-label">Questions</div>
                    </div>
                    <div class="quiz-stat-item">
                        <div class="quiz-stat-value">@Model.TotalPoints</div>
                        <div class="quiz-stat-label">Total Points</div>
                    </div>
                    <div class="quiz-stat-item">
                        <div class="quiz-stat-value">@Model.TimeLimit</div>
                        <div class="quiz-stat-label">Minutes</div>
                    </div>
                    <div class="quiz-stat-item">
                        <div class="quiz-stat-value">@Model.PassingScore%</div>
                        <div class="quiz-stat-label">Pass Score</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">        <!-- Questions List -->
        <div class="col-lg-8">
            <div class="quiz-container">
                <div class="quiz-header">
                    <div class="quiz-header-content">
                        <h3 class="quiz-title">@Model.QuizName</h3>
                        <div class="quiz-meta">
                            <div class="quiz-meta-item">
                                <i class="fas fa-clock"></i>
                                <span>@Model.TimeLimit minutes</span>
                            </div>
                            <div class="quiz-meta-item">
                                <i class="fas fa-star"></i>
                                <span>@Model.PassingScore% passing</span>
                            </div>
                            <div class="quiz-meta-item">
                                <i class="fas fa-book"></i>
                                <span>@Model.CourseName</span>
                            </div>
                        </div>
                    </div>
                    <div class="quiz-actions">
                        <a href="@Url.Action("Edit", "Quiz", new { id = Model.QuizId })" 
                           class="quiz-action-btn" title="Edit Quiz">
                            <i class="fas fa-edit"></i>
                        </a>
                        <a href="@Url.Action("Create", "Question", new { quizId = Model.QuizId })" 
                           class="quiz-action-btn" title="Add Question">
                            <i class="fas fa-plus"></i>
                        </a>
                    </div>
                </div>
                
                <div class="questions-list">
                    @if (Model.Questions != null && Model.Questions.Count > 0)
                    {
                        <div class="questions-header">
                            <h5 class="questions-title">
                                <i class="fas fa-list-ol"></i>
                                Questions
                                <span class="questions-count">@Model.TotalQuestions</span>
                            </h5>
                        </div>
                        
                        <div id="questions-sortable" data-quiz-id="@Model.QuizId">
                            @for (int i = 0; i < Model.Questions.Count; i++)
                            {
                                var question = Model.Questions[i];
                                <div class="question-item" data-question-id="@question.QuestionId">
                                    <div class="question-content">
                                        <div class="question-number">@(i + 1)</div>
                                        <div class="question-details">
                                            <div class="question-meta">
                                                <span class="question-type-badge">@question.QuestionType</span>
                                                <span class="question-points-badge">@question.Points pts</span>
                                                <div class="drag-handle" title="Drag to reorder">
                                                    <i class="fas fa-grip-vertical"></i>
                                                </div>
                                            </div>
                                            <p class="question-text">@question.QuestionText</p>
                                            <div class="question-info">
                                                <div class="question-info-item">
                                                    <i class="fas fa-list"></i>
                                                    <span>@question.AnswerOptionsCount options</span>
                                                </div>
                                                <div class="question-info-item">
                                                    <i class="fas fa-calendar"></i>
                                                    <span>@question.QuestionCreatedAt.ToString("dd/MM/yyyy")</span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="question-actions">
                                            <a href="@Url.Action("Details", "Question", new { id = question.QuestionId })"
                                               class="question-action-btn view" title="View Details">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="@Url.Action("Edit", "Question", new { id = question.QuestionId })"
                                               class="question-action-btn edit" title="Edit">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <button type="button" class="question-action-btn delete"
                                                    onclick="confirmDelete(@question.QuestionId, '@question.QuestionText')"
                                                    title="Delete">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="empty-questions">
                            <div class="empty-questions-icon">
                                <i class="fas fa-question-circle"></i>
                            </div>
                            <h6 class="empty-questions-title">No questions added yet</h6>
                            <p class="empty-questions-text">
                                Start building your quiz by adding your first question. You can create multiple choice, 
                                true/false, essay, or fill-in-the-blank questions.
                            </p>
                            <a href="@Url.Action("Create", "Question", new { quizId = Model.QuizId })"
                               class="btn-add-first-question">
                                <i class="fas fa-plus"></i>Add First Question
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Action Panel -->
        <div class="col-lg-4">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-white border-bottom-0 py-3">
                    <h6 class="mb-0">
                        <i class="fas fa-cogs me-2 text-primary"></i>
                        Quiz Actions
                    </h6>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="@Url.Action("Edit", "Quiz", new { id = Model.QuizId })"
                            class="btn btn-outline-primary">
                            <i class="fas fa-edit me-2"></i>Edit Quiz
                        </a>
                        <a href="@Url.Action("Create", "Question", new { quizId = Model.QuizId })"
                            class="btn btn-outline-success">
                            <i class="fas fa-plus me-2"></i>Add Question
                        </a>
                        <hr class="my-3">
                        <a href="@Url.Action("Details", "Course", new { id = Model.CourseId })"
                            class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i>Back to Course
                        </a>
                        @if (!string.IsNullOrEmpty(Model.LessonId))
                        {
                            <a href="@Url.Action("Details", "Lesson", new { id = Model.LessonId })"
                                class="btn btn-outline-info">
                                <i class="fas fa-play-circle me-2"></i>Back to Lesson
                            </a>
                        }
                    </div>
                </div>
            </div>

            <!-- Quiz Info -->
            <div class="card shadow-sm border-0 mt-3">
                <div class="card-header bg-white border-bottom-0 py-3">
                    <h6 class="mb-0">
                        <i class="fas fa-info-circle me-2 text-primary"></i>
                        Quiz Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row g-2 small">
                        <div class="col-12">
                            <strong>Created:</strong> @Model.QuizCreatedAt.ToString("dd/MM/yyyy HH:mm")
                        </div>
                        <div class="col-12">
                            <strong>Updated:</strong> @Model.QuizUpdatedAt.ToString("dd/MM/yyyy HH:mm")
                        </div>
                        <div class="col-12">
                            <strong>Time Limit:</strong> @Model.TimeLimit minutes
                        </div>
                        <div class="col-12">
                            <strong>Passing Score:</strong> @Model.PassingScore%
                        </div>
                        <div class="col-12">
                            <strong>Total Points:</strong> @Model.TotalPoints
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    Confirm Delete
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this question?</p>
                <p><strong id="questionToDelete"></strong></p>
                <p class="text-muted small">This action cannot be undone.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form id="deleteForm" method="post" style="display: inline;">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/sortablejs@latest/Sortable.min.js"></script>
    <script src="~/js/pages/Quiz/quiz-details.js"></script>
}
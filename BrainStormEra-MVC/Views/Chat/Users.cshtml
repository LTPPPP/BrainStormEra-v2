@model IEnumerable<BrainStormEra_MVC.Models.Account>
@{
    ViewData["Title"] = "New Conversation";
}

<div class="container-fluid">
    <div class="row">
        <div class="col-md-3">
            <div class="card mb-3">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Start Chat</h5>
                    <a asp-action="Index" class="text-white"><i class="bi bi-arrow-left"></i></a>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        <a asp-action="Index" class="list-group-item list-group-item-action">
                            <i class="bi bi-arrow-left me-2"></i> Back to conversations
                        </a>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <div class="d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Select a User</h5>
                        <div class="input-group input-group-sm" style="max-width: 300px;">
                            <input type="text" id="searchUser" class="form-control" placeholder="Search users...">
                            <span class="input-group-text bg-white">
                                <i class="bi bi-search"></i>
                            </span>
                        </div>
                    </div>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush" id="userList">
                        @if (Model != null && Model.Any())
                        {
                            foreach (var user in Model)
                            {
                                <div class="list-group-item list-group-item-action user-item" data-username="@user.Username?.ToLower()" data-fullname="@user.FullName?.ToLower()">
                                    <div class="d-flex align-items-center">
                                        <div class="flex-shrink-0">
                                            @if (string.IsNullOrEmpty(user.UserImage))
                                            {
                                                <div class="avatar bg-primary text-white rounded-circle d-flex align-items-center justify-content-center" style="width: 40px; height: 40px;">
                                                    <span>@(user.FullName?.Substring(0, 1).ToUpper() ?? "U")</span>
                                                </div>
                                            }
                                            else
                                            {
                                                <img src="@user.UserImage" alt="@user.FullName" class="rounded-circle" width="40" height="40">
                                            }
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-0">@user.FullName</h6>
                                            <small class="text-muted">@user.Username</small>
                                        </div>
                                        <div>
                                            <form asp-action="CreateConversation" method="post">
                                                <input type="hidden" name="userId" value="@user.UserId">
                                                <button type="submit" class="btn btn-sm btn-primary">
                                                    <i class="bi bi-chat"></i> Message
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        }
                        else
                        {
                            <div class="list-group-item">No users found</div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Simple search functionality
        $(document).ready(function() {
            $("#searchUser").on("keyup", function() {
                const value = $(this).val().toLowerCase();
                $(".user-item").filter(function() {
                    const username = $(this).data("username") || "";
                    const fullname = $(this).data("fullname") || "";
                    const matchesSearch = username.indexOf(value) > -1 || fullname.indexOf(value) > -1;
                    $(this).toggle(matchesSearch);
                });
            });
        });
    </script>
}

@model IEnumerable<BrainStormEra_MVC.Controllers.ConversationViewModel>
@{
    ViewData["Title"] = "My Conversations";
}

<div class="container-fluid">
    <h1>My Conversations</h1>

    <div class="row mt-4">
        <div class="col-md-3">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0">Conversations</h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        @if (Model != null && Model.Any())
                        {
                            foreach (var convo in Model)
                            {
                                var otherUser = convo.OtherParticipants.FirstOrDefault();
                                var displayName = otherUser?.FullName ?? "Unknown User";
                                var lastMessage = convo.Conversation.LastMessage?.MessageContent ?? "No messages yet";
                                var lastMessageTime = convo.Conversation.LastMessageAt?.ToString("HH:mm dd/MM") ?? "";
                                
                                <a asp-action="Conversation" 
                                   asp-route-id="@convo.Conversation.ConversationId" 
                                   class="list-group-item list-group-item-action @(convo.UnreadMessageCount > 0 ? "bg-light" : "")">
                                    <div class="d-flex w-100 justify-content-between">
                                        <h6 class="mb-1">@displayName</h6>
                                        <small>@lastMessageTime</small>
                                    </div>
                                    <p class="mb-1 text-truncate">@lastMessage</p>
                                    @if (convo.UnreadMessageCount > 0)
                                    {
                                        <span class="badge bg-primary rounded-pill">@convo.UnreadMessageCount</span>
                                    }
                                </a>
                            }
                        }
                        else
                        {
                            <div class="list-group-item">No conversations yet</div>
                        }
                    </div>
                </div>
                <div class="card-footer">
                    <a asp-action="Users" class="btn btn-sm btn-primary w-100">
                        <i class="bi bi-plus-circle"></i> New Conversation
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-9">
            <div class="card">
                <div class="card-body text-center">
                    <p class="mb-0 text-muted">
                        <i class="bi bi-chat-dots" style="font-size: 3rem;"></i>
                    </p>
                    <h4 class="mt-3">Select a conversation</h4>
                    <p>Choose a conversation from the list or start a new one.</p>
                    <a asp-action="Users" class="btn btn-outline-primary">
                        <i class="bi bi-plus-circle"></i> Start New Conversation
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/lib/microsoft/signalr/dist/browser/signalr.js"></script>
    <script src="~/js/chat-notification.js"></script>
    <script>
        // Add notification indicator if there are unread messages
        $(document).ready(function() {
            const unreadTotal = @(Model != null ? Model.Sum(x => x.UnreadMessageCount) : 0);
            if (unreadTotal > 0) {
                // Add notification to navbar or title
                document.title = `(${unreadTotal}) ${document.title}`;
            }
            
            // Initialize notification system for real-time updates
            const chatNotification = new ChatNotification('/chatHub');
            chatNotification.initialize();
        });
    </script>
}

@model BrainStormEra_MVC.Models.ViewModels.LearnerDashboardViewModel
@{
    ViewData["Title"] = "Learner Dashboard";
}

<div class="dashboard-container">
    <!-- Welcome Section -->
    <div class="welcome-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="welcome-title">Welcome back, @(string.IsNullOrEmpty(Model.FullName) ? Model.UserName :
                                                Model.FullName)!</h1>
                    <p class="welcome-subtitle">Continue your learning journey today.</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="#" class="btn btn-primary explore-courses-btn">
                        <i class="fas fa-compass me-2"></i>Explore Courses
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container main-dashboard py-4">
        <div class="row">
            <!-- Left Column - My Courses -->
            <div class="col-lg-8">
                <!-- My Courses Section -->
                <div class="dashboard-card mb-4">
                    <div class="dashboard-card-header d-flex justify-content-between align-items-center">
                        <h2>My Courses</h2>
                        <a href="#" class="view-all-link">View All <i class="fas fa-arrow-right ms-1"></i></a>
                    </div>
                    <div class="dashboard-card-body">
                        @if (Model.EnrolledCourses.Any())
                        {
                            <div class="row">
                                @foreach (var course in Model.EnrolledCourses)
                                {
                                    <div class="col-md-6 col-lg-4 mb-4">
                                        <div class="course-card">
                                            <div class="course-image">
                                                <img src="@course.CourseImage" alt="@course.CourseName">
                                                <div class="progress-overlay">
                                                    <div class="progress">
                                                        <div class="progress-bar" role="progressbar"
                                                            style="width: @(course.CompletionPercentage)%"
                                                            aria-valuenow="@course.CompletionPercentage" aria-valuemin="0"
                                                            aria-valuemax="100">
                                                        </div>
                                                    </div>
                                                    <span class="progress-text">@course.CompletionPercentage%</span>
                                                </div>
                                            </div>
                                            <div class="course-details">
                                                <h3 class="course-title">@course.CourseName</h3>
                                                <p class="course-instructor">by @course.AuthorName</p>
                                                <a href="#" class="continue-btn">Continue Learning</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <img src="/img/empty-courses.svg" alt="No courses" class="empty-state-img">
                                <h3>No courses yet</h3>
                                <p>You haven't enrolled in any courses yet. Start exploring!</p>
                                <a href="#" class="btn btn-primary">Find Courses</a>
                            </div>
                        }
                    </div>
                </div>

                <!-- Recommended Courses Section -->
                <div class="dashboard-card">
                    <div class="dashboard-card-header d-flex justify-content-between align-items-center">
                        <h2>Recommended For You</h2>
                        <a href="#" class="view-all-link">View All <i class="fas fa-arrow-right ms-1"></i></a>
                    </div>
                    <div class="dashboard-card-body">
                        @if (Model.RecommendedCourses.Any())
                        {
                            <div class="row">
                                @foreach (var course in Model.RecommendedCourses.Take(3))
                                {
                                    <div class="col-md-6 col-lg-4 mb-4">
                                        <div class="course-card">
                                            <div class="course-image">
                                                <img src="@course.CourseImage" alt="@course.CourseName">
                                                @if (course.Price > 0)
                                                {
                                                    <div class="course-price">$@course.Price</div>
                                                }
                                                else
                                                {
                                                    <div class="course-price free">Free</div>
                                                }
                                            </div>
                                            <div class="course-details">
                                                <h3 class="course-title">@course.CourseName</h3>
                                                <p class="course-instructor">by @course.AuthorName</p>
                                                <a href="#" class="enroll-btn">Enroll Now</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <img src="/img/empty-recommendations.svg" alt="No recommendations" class="empty-state-img">
                                <h3>No recommendations yet</h3>
                                <p>We'll suggest courses based on your interests soon!</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Right Column - Notifications & Stats -->
            <div class="col-lg-4">
                <!-- Notifications Section -->
                <div class="dashboard-card mb-4">
                    <div class="dashboard-card-header d-flex justify-content-between align-items-center">
                        <h2>Notifications</h2>
                        <a href="#" class="mark-all-read">Mark All Read</a>
                    </div>
                    <div class="dashboard-card-body">
                        @if (Model.Notifications.Any())
                        {
                            <div class="notifications-list">
                                @foreach (var notification in Model.Notifications)
                                {
                                    <div class="notification-item @(notification.IsRead ? "" : "unread")">
                                        <div class="notification-icon">
                                            <i class="fas fa-bell"></i>
                                        </div>
                                        <div class="notification-content">
                                            <h4 class="notification-title">@notification.Title</h4>
                                            <p class="notification-message">@notification.Message</p>
                                            <div class="notification-time">
                                                @notification.CreatedAt.ToString("MMM dd, yyyy")
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <img src="/img/empty-notifications.svg" alt="No notifications" class="empty-state-img">
                                <h3>No notifications</h3>
                                <p>You're all caught up!</p>
                            </div>
                        }
                    </div>
                </div>

                <!-- Learning Stats Widget -->
                <div class="dashboard-card">
                    <div class="dashboard-card-header">
                        <h2>Learning Stats</h2>
                    </div>
                    <div class="dashboard-card-body">
                        <div class="stats-widget">
                            <div class="stat-item">
                                <div class="stat-icon">
                                    <i class="fas fa-book"></i>
                                </div>
                                <div class="stat-content">
                                    <h4 class="stat-value">@Model.EnrolledCourses.Count</h4>
                                    <p class="stat-label">Courses</p>
                                </div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-icon">
                                    <i class="fas fa-award"></i>
                                </div>
                                <div class="stat-content">
                                    <h4 class="stat-value">0</h4>
                                    <p class="stat-label">Certificates</p>
                                </div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-icon">
                                    <i class="fas fa-clock"></i>
                                </div>
                                <div class="stat-content">
                                    <h4 class="stat-value">0h</h4>
                                    <p class="stat-label">Learning Time</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/pages/learner-dashboard.css">
}

@section Scripts {
    <script src="~/js/pages/learner-dashboard.js"></script>
}

                                               
                                                           
                                                           
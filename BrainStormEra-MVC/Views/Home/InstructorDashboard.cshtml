@model BrainStormEra_MVC.Models.ViewModels.InstructorDashboardViewModel
@{
    ViewData["Title"] = "Instructor Dashboard";
}

<div class="dashboard-container">
    <!-- Welcome Section -->
    <div class="welcome-section">
        <div class="container">
            <div class="row align-items-center">
                <div class="col-md-8">
                    <h1 class="welcome-title">Welcome to your Instructor Dashboard, @Model.InstructorName!</h1>
                    <p class="welcome-subtitle">Manage your courses and connect with students.</p>
                </div>
                <div class="col-md-4 text-md-end">
                    <a href="#" class="btn btn-primary create-course-btn">
                        <i class="fas fa-plus me-2"></i>Create New Course
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="container main-dashboard py-4">
        <div class="row">
            <!-- Left Column - Course Management -->
            <div class="col-lg-8">
                <!-- My Courses Section -->
                <div class="dashboard-card mb-4">
                    <div class="dashboard-card-header d-flex justify-content-between align-items-center">
                        <h2>My Courses</h2>
                        <a href="#" class="view-all-link">View All <i class="fas fa-arrow-right ms-1"></i></a>
                    </div>
                    <div class="dashboard-card-body">
                        @if (Model.RecentCourses.Any())
                        {
                            <div class="row">
                                @foreach (var course in Model.RecentCourses)
                                {
                                    <div class="col-md-6 col-lg-4 mb-4">
                                        <div class="course-card">
                                            <div class="course-image">
                                                <img src="@(course.CourseImage ?? "/img/default-course.png")" alt="@course.CourseName">
                                                <div class="course-price">@(course.Price > 0 ? $"${course.Price}" : "Free")</div>
                                            </div>                                            <div class="course-details">
                                                <h3 class="course-title">@course.CourseName</h3>
                                                <div class="course-stats">
                                                    <span><i class="fas fa-user"></i> @course.EnrollmentCount students</span>
                                                </div>
                                                <a href="#" class="edit-btn">Edit Course</a>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <img src="/img/empty-courses.svg" alt="No courses" class="empty-state-img">
                                <h3>No courses yet</h3>
                                <p>You haven't created any courses yet. Start creating!</p>
                                <a href="#" class="btn btn-primary">Create Course</a>
                            </div>
                        }
                    </div>
                </div>

                <!-- Course Analytics Section -->
                <div class="dashboard-card">
                    <div class="dashboard-card-header">
                        <h2>Course Analytics</h2>
                    </div>
                    <div class="dashboard-card-body">
                        @if (Model.TotalCourses > 0)
                        {
                            <div class="analytics-summary">
                                <p>Analyze your course performance to improve student engagement and learning outcomes.</p>
                                <div class="chart-placeholder">
                                    <div class="chart-loading">
                                        <i class="fas fa-chart-bar"></i>
                                        <span>Analytics loading...</span>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div class="empty-state">
                                <img src="/img/empty-analytics.svg" alt="No analytics" class="empty-state-img">
                                <h3>No analytics data</h3>
                                <p>Analytics will be available once you have active courses with students.</p>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Right Column - Notifications & Stats -->
            <div class="col-lg-4">
                <!-- Instructor Stats Widget -->
                <div class="dashboard-card mb-4">
                    <div class="dashboard-card-header">
                        <h2>Instructor Stats</h2>
                    </div>
                    <div class="dashboard-card-body">
                        <div class="stats-widget">
                            <div class="stat-item">
                                <div class="stat-icon">
                                    <i class="fas fa-book"></i>
                                </div>
                                <div class="stat-content">
                                    <h4 class="stat-value">@Model.TotalCourses</h4>
                                    <p class="stat-label">Courses</p>
                                </div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-icon">
                                    <i class="fas fa-users"></i>
                                </div>
                                <div class="stat-content">
                                    <h4 class="stat-value">@Model.TotalStudents</h4>
                                    <p class="stat-label">Students</p>
                                </div>
                            </div>
                            <div class="stat-item">
                                <div class="stat-icon">
                                    <i class="fas fa-dollar-sign"></i>
                                </div>
                                <div class="stat-content">
                                    <h4 class="stat-value">$@Model.TotalRevenue.ToString("0.00")</h4>
                                    <p class="stat-label">Revenue</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Notifications Section -->
                <div class="dashboard-card">
                    <div class="dashboard-card-header d-flex justify-content-between align-items-center">
                        <h2>Notifications</h2>
                        <a href="#" class="mark-all-read">Mark All Read</a>
                    </div>
                    <div class="dashboard-card-body">
                        <div class="empty-state">
                            <img src="/img/empty-notifications.svg" alt="No notifications" class="empty-state-img">
                            <h3>No notifications</h3>
                            <p>You're all caught up!</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/pages/instructor-dashboard.js"></script>
}

@using Microsoft.AspNetCore.Mvc.Rendering
@using Microsoft.AspNetCore.Mvc.ViewFeatures
@{
    // This partial view contains the common header used across the application
}

<header class="container-fluid sticky-header">
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="@Url.Action("Index", "Home")">
                <img src="~/img/logo/logowithoutbackground.png" alt="BrainStormEra Logo" class="logo_img">
            </a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Home")">DASHBOARD</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Index", "Course")">COURSE</a>
                    </li>
                    @if (User.Identity?.IsAuthenticated == true && (User.IsInRole("Learner") ||
                                        User.IsInRole("learner")))
                    {
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("LearnerAchievements", "Achievement")">ACHIEVEMENT</a>
                        </li>
                    }
                </ul>
                <div class="profile d-flex align-items-center">
                    @if (User.Identity?.IsAuthenticated == true)
                    {
                        <div class="dropdown me-3">
                            <a href="#" class="notification-bell" id="notificationDropdown" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                <i class="fas fa-bell"></i>
                                <span class="notification-badge" id="notificationBadge"></span>
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end notification-dropdown"
                                aria-labelledby="notificationDropdown">
                                <li class="dropdown-header">Notifications</li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li class="notification-empty text-center p-3">
                                    <p class="mb-0">No new notifications</p>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li class="dropdown-item text-center">
                                    <a href="#" class="view-all-notifications">View All</a>
                                </li>
                            </ul>
                        </div>
                        <div class="dropdown">
                            <a href="#" class="user-avatar" id="userDropdown" data-bs-toggle="dropdown"
                                aria-expanded="false">
                                <img src="@(User.FindFirst("UserImage")?.Value ?? "/img/default-avatar.svg")"
                                    alt="User Avatar">
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                <li class="dropdown-header">
                                    <div class="user-info">
                                        <strong>@(User.FindFirst("FullName")?.Value ?? User.Identity.Name)</strong>
                                        <small>@User.FindFirst(System.Security.Claims.ClaimTypes.Email)?.Value</small>
                                    </div>
                                </li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-user me-2"></i>My Profile</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-book me-2"></i>My Courses</a></li>
                                <li><a class="dropdown-item" href="#"><i class="fas fa-cog me-2"></i>Settings</a></li>
                                <li>
                                    <hr class="dropdown-divider">
                                </li>
                                <li><a class="dropdown-item" href="@Url.Action("Logout", "Login")" data-action="logout"><i
                                            class="fas fa-sign-out-alt me-2"></i>Logout</a></li>
                            </ul>
                        </div>
                    }
                    else
                    {
                        <a href="@Url.Action("Index", "Register")" class="btn_register me-2">
                            <i class="fas fa-user-plus me-1"></i>Register
                        </a>
                        <a href="@Url.Action("Index", "Login")" class="btn_login">
                            <i class="fas fa-sign-in-alt me-2"></i>Log In
                        </a>
                    }
                </div>
            </div>
        </div>
    </nav>
</header>

<!-- Load header script -->
<script src="~/js/components/header.js"></script>
@model BrainStormEra_MVC.Models.ViewModels.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/css/profile.css" rel="stylesheet" />

<div class="profile-container">
    <div class="change-password-header">
        <div class="d-flex justify-content-between align-items-center">
            <h2><i class="fas fa-lock"></i> Change Password</h2>
            <a href="@Url.Action("Index", "Profile")" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left"></i> Back
            </a>
        </div>
    </div>

    <div class="change-password-content">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="password-form-card">
                    <div class="card-body">
                        <div class="password-form-header">
                            <div class="password-icon">
                                <i class="fas fa-shield-alt"></i>
                            </div>
                            <h4>Change Your Password</h4>
                            <p class="text-muted">Ensure your new password has at least 6 characters and is hard to
                                guess</p>
                        </div>

                        <form asp-action="ChangePassword" method="post" class="password-form">
                            <div class="form-group">
                                <label asp-for="CurrentPassword" class="form-label required">Current Password</label>
                                <div class="password-input-group">
                                    <input asp-for="CurrentPassword" type="password" class="form-control"
                                        placeholder="Enter current password" />
                                    <button type="button" class="password-toggle" data-target="CurrentPassword">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
                            </div>
                            <div class="form-group">
                                <label asp-for="NewPassword" class="form-label required">New Password</label>
                                <div class="password-input-group">
                                    <input asp-for="NewPassword" type="password" class="form-control"
                                        placeholder="Enter new password" />
                                    <button type="button" class="password-toggle" data-target="NewPassword">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="NewPassword" class="text-danger"></span>
                                <div class="password-strength">
                                    <div class="strength-bar">
                                        <div class="strength-fill"></div>
                                    </div>
                                    <span class="strength-text">Password Strength</span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="form-label required">Confirm New
                                    Password</label>
                                <div class="password-input-group">
                                    <input asp-for="ConfirmPassword" type="password" class="form-control"
                                        placeholder="Re-enter new password" />
                                    <button type="button" class="password-toggle" data-target="ConfirmPassword">
                                        <i class="fas fa-eye"></i>
                                    </button>
                                </div>
                                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                            </div>
                            <div class="password-requirements">
                                <h6>Password Requirements:</h6>
                                <ul>
                                    <li id="length-check"><i class="fas fa-times text-danger"></i> At least 6 characters
                                    </li>
                                    <li id="uppercase-check"><i class="fas fa-times text-danger"></i> Contains at least
                                        1 uppercase letter</li>
                                    <li id="lowercase-check"><i class="fas fa-times text-danger"></i> Contains at least
                                        1 lowercase letter</li>
                                    <li id="number-check"><i class="fas fa-times text-danger"></i> Contains at least 1
                                        number</li>
                                    <li id="special-check"><i class="fas fa-times text-danger"></i> Contains at least 1
                                        special character</li>
                                </ul>
                            </div>
                            <div class="form-actions">
                                <button type="submit" class="btn btn-primary btn-block">
                                    <i class="fas fa-save"></i> Change Password
                                </button>
                                <a href="@Url.Action("Index", "Profile")" class="btn btn-outline-secondary btn-block">
                                    <i class="fas fa-times"></i> Cancel
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/change-password.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
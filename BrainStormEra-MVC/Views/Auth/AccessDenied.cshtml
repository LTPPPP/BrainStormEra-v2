@{
    ViewData["Title"] = "Access Denied";
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Access Denied - BrainStormEra</title>
    <link rel="icon" type="image/x-icon" href="~/SharedMedia/logo/logowithoutbackground.png" sizes="48x48">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.6.0/css/all.min.css">
    <!-- Load global CSS variables first -->
    <link rel="stylesheet" href="~/css/global.css">
    <!-- Preload key resources for better performance -->
    <link rel="preload" href="~/css/pages/Auth/login.css" as="style">
    <link rel="preload" href="/SharedMedia/static/login-bg.jpg" as="image">
    <link rel="stylesheet" href="~/css/pages/Auth/login.css">
</head>

<body>
    <!-- Toast notification data containers -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div data-toast-success="@TempData["SuccessMessage"]" style="display:none;"></div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div data-toast-error="@TempData["ErrorMessage"]" style="display:none;"></div>
    }
    @if (TempData["WarningMessage"] != null)
    {
        <div data-toast-warning="@TempData["WarningMessage"]" style="display:none;"></div>
    }
    @if (TempData["InfoMessage"] != null)
    {
        <div data-toast-info="@TempData["InfoMessage"]" style="display:none;"></div>
    }

    <!-- Home button -->
    <a href="@Url.Action("Index", "Home")" class="home-button" title="Return to Home">
        <i class="fas fa-home"></i>
    </a>

    <!-- Background Elements -->
    <div class="login-background">
        <div class="floating-elements">
            <div class="floating-icon" style="--delay: 0s; --duration: 8s;">
                <i class="fas fa-lightbulb"></i>
            </div>
            <div class="floating-icon" style="--delay: 2s; --duration: 10s;">
                <i class="fas fa-graduation-cap"></i>
            </div>
            <div class="floating-icon" style="--delay: 4s; --duration: 12s;">
                <i class="fas fa-book"></i>
            </div>
            <div class="floating-icon" style="--delay: 6s; --duration: 9s;">
                <i class="fas fa-brain"></i>
            </div>
            <div class="floating-icon" style="--delay: 1s; --duration: 11s;">
                <i class="fas fa-atom"></i>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="login-container">
        <div class="login-card">
            <!-- Logo -->
            <div class="logo-section">
                <img src="~/SharedMedia/logo/logowithoutbackground.png" alt="BrainStormEra Logo" class="logo">
                <h1 class="brand-name">BrainStormEra</h1>
            </div>

            <!-- Access Denied Content -->
            <div class="login-form">
                <h2 class="form-title text-center mb-4">
                    <i class="fas fa-ban text-danger me-2"></i>
                    Access Denied
                </h2>

                <div class="text-center">
                    <div class="alert alert-danger" role="alert">
                        <i class="fas fa-exclamation-triangle me-2"></i>
                        <strong>Access Denied!</strong>
                        <br>
                        You don't have permission to access this resource.
                    </div>

                    <div class="mt-4">
                        <p class="text-muted">
                            This could happen for several reasons:
                        </p>
                        <ul class="list-unstyled text-muted">
                            <li><i class="fas fa-circle me-2" style="font-size: 0.5rem;"></i>You don't have the required
                                permissions</li>
                            <li><i class="fas fa-circle me-2" style="font-size: 0.5rem;"></i>Your session may have
                                expired</li>
                            <li><i class="fas fa-circle me-2" style="font-size: 0.5rem;"></i>The resource requires a
                                different role</li>
                        </ul>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="button-group mt-4">
                    <a href="@Url.Action("Index", "Home")" class="btn btn-primary btn-lg">
                        <i class="fas fa-home me-2"></i>
                        Go to Home
                    </a>
                    <a href="@Url.Action("Login", "Auth")" class="btn btn-outline-secondary btn-lg">
                        <i class="fas fa-sign-in-alt me-2"></i>
                        Login Again
                    </a>
                </div>

                <!-- Support Information -->
                <div class="mt-4 text-center">
                    <p class="text-muted small">
                        Need help? Contact our support team or check your account permissions.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/global.js"></script>
</body>

</html>

                               
                               
                               
